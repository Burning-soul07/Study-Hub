import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'StudyHub Teacher UI',
      debugShowCheckedModeBanner: false,
      theme: ThemeData(
        // Set the primary color to match the blue in the design
        colorScheme: ColorScheme.fromSeed(seedColor: const Color(0xFF1E88E5)),
        useMaterial3: true,
      ),
      home: const TeacherHomeScreen(),
    );
  }
}

class TeacherHomeScreen extends StatelessWidget {
  const TeacherHomeScreen({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      // --- AppBar Section ---
      appBar: AppBar(
        // The title "StudyHub"
        title: const Text(
          'StudyHub',
          style: TextStyle(fontWeight: FontWeight.bold),
        ),
        // The profile icon on the right
        actions: const [
          Padding(
            padding: EdgeInsets.only(right: 16.0),
            child: CircleAvatar(
              backgroundColor: Colors.grey,
              child: Icon(Icons.person, color: Colors.white),
            ),
          ),
        ],
      ),
      // --- Bottom Navigation Bar Section ---
      bottomNavigationBar: BottomNavigationBar(
        type: BottomNavigationBarType.fixed, // To show all labels
        currentIndex: 0, // 'Home' is selected
        selectedItemColor: const Color(0xFF1E88E5), // Blue selected color
        unselectedItemColor: Colors.grey,
        items: const [
          BottomNavigationBarItem(
            icon: Icon(Icons.home),
            label: 'Home',
          ),
          BottomNavigationBarItem(
            icon: Icon(Icons.description), // Or another test/assignment icon
            label: 'Tests',
          ),
          BottomNavigationBarItem(
            icon: Icon(Icons.bookmark), // Or another note-related icon
            label: 'Notes',
          ),
          BottomNavigationBarItem(
            icon: Icon(Icons.person),
            label: 'Profile',
          ),
        ],
      ),
      // --- Body Content Section ---
      body: SingleChildScrollView(
        padding: const EdgeInsets.all(16.0),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: <Widget>[
            // --- Department Dropdown ---
            Row(
              children: [
                const Text(
                  'Department',
                  style: TextStyle(color: Colors.grey),
                ),
                const SizedBox(width: 8),
                Expanded(
                  child: DropdownButtonHideUnderline(
                    child: DropdownButton<String>(
                      value: 'Computer Science',
                      isExpanded: true,
                      icon: const Icon(Icons.keyboard_arrow_down),
                      style: const TextStyle(
                        color: Colors.black,
                        fontWeight: FontWeight.bold,
                        fontSize: 16,
                      ),
                      items: <String>['Computer Science', 'Electrical Engineering']
                          .map<DropdownMenuItem<String>>((String value) {
                        return DropdownMenuItem<String>(
                          value: value,
                          child: Text(value),
